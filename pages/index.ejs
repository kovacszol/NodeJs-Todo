<% layout('boilerplate') -%>
    <form action="/create" method="POST" class="createForm d-flex justify-content-center mb-5">
        <input type="text" name="createInput" id="createInput">
        <button type="submit" class="btn btn-info btn-md ml-3">Submit</button>
    </form>
    <ul>
        <% for(let i=0;i<allTodo.length;i++){ %>
            <li id=" li-<%=allTodo[i]._id%>" class="mt-3 p-4 border border-primary">
                <div id="edit-div-<%=allTodo[i]._id%>" style="display: none;">
                    <form action="/update/<%=allTodo[i]._id%>?_method=PATCH" method="POST">
                        <input name="editInput" type="text" id="editInput-<%=allTodo[i]._id%>"
                            value="<%= allTodo[i].todoItem%>">
                        <button type="submit" class="btn btn-primary btn-md ml-3" id="<%=allTodo[i]._id%>">Save</button>
                    </form>
                </div>
                <div id="normal-div-<%=allTodo[i]._id%>">
                    <h3 class="d-inline">
                        <%= allTodo[i].todoItem%>
                    </h3>
                    <form action="/delete/<%=allTodo[i]._id%>?_method=DELETE" method="POST" class="d-inline">
                        <button type=" submit" class="btn btn-danger btn-md float-right ml-1" id="<%=allTodo[i]._id%>"
                            onClick="delete_click(this.id)">Delete</button>
                    </form>
                    <button type="button" class="btn btn-primary btn-md float-right" id="<%=allTodo[i]._id%>"
                        onClick="edit_click(this.id)">Edit</button>
                </div>
                <% } %>
            </li>
    </ul>